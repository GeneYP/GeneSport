<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0.3dp">

    <RelativeLayout
        android:id="@+id/rel_thumb_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d9d9d9">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_photo_white_24dp" />

        <com.sangcomz.fishbun.util.SquareImageView
            android:id="@+id/img_thumb_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <com.sangcomz.fishbun.util.SquareTextView
        android:id="@+id/txt_thumb_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/rel_thumb_area"
        android:layout_alignTop="@+id/rel_thumb_area"
        android:background="#bb000000"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>
